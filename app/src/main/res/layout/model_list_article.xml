<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/textView_titre_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Title_Article"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/textView_body_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Body_Article"
        app:layout_constraintTop_toBottomOf="@+id/textView_titre_article"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <Button
        android:id="@+id/Button_add_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/color_comment"
        android:text="Commenter"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_body_article"
        />

</android.support.constraint.ConstraintLayout>